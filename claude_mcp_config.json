{
  "mcpServers": {
    "adv-rag-tools": {
      "command": "/home/donbr/ghcp/adv-rag/.venv/bin/python",
      "args": ["src/mcp/server.py"],
      "cwd": "/home/donbr/ghcp/adv-rag",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "description": "Advanced RAG MCP Tools Server - Full RAG pipeline with LLM synthesis (Command Pattern)",
      "metadata": {
        "version": "2.2.0",
        "transport": "stdio",
        "tools": [
          "naive_retriever",
          "bm25_retriever",
          "semantic_retriever",
          "contextual_compression_retriever",
          "multi_query_retriever",
          "ensemble_retriever"
        ],
        "qdrant_resources": [
          "qdrant://collections",
          "qdrant://collections/{collection_name}",
          "qdrant://collections/{collection_name}/documents/{point_id}",
          "qdrant://collections/{collection_name}/search",
          "qdrant://collections/{collection_name}/stats"
        ],
        "performance": "~20-30 seconds",
        "output": "Formatted answer + context",
        "logs": "logs/mcp_tools.log"
      }
    },
    "adv-rag-resources": {
      "command": "/home/donbr/ghcp/adv-rag/.venv/bin/python",
      "args": ["src/mcp/resources.py"],
      "cwd": "/home/donbr/ghcp/adv-rag",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "description": "Advanced RAG MCP Resources Server - Direct data access bypassing LLM (Query Pattern - 3-5x faster)",
      "metadata": {
        "version": "2.2.0",
        "transport": "stdio",
        "resources": [
          "retriever://naive_retriever/{query}",
          "retriever://bm25_retriever/{query}",
          "retriever://semantic_retriever/{query}",
          "retriever://contextual_compression_retriever/{query}",
          "retriever://multi_query_retriever/{query}",
          "retriever://ensemble_retriever/{query}",
          "system://health"
        ],
        "performance": "~3-5 seconds",
        "output": "Raw documents + metadata",
        "logs": "logs/mcp_resources.log"
      }
    }
  }
}
